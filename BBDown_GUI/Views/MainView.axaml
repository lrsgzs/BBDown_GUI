<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:BBDown_GUI.ViewModels"
             xmlns:views="using:BBDown_GUI.Views"
             xmlns:fa="using:FluentAvalonia.UI.Controls"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BBDown_GUI.Views.MainView"
             x:DataType="views:MainView"
             d:DataContext="{d:DesignInstance views:MainView}"
             Loaded="OnLoaded"
             Unloaded="OnUnloaded">
    <fa:NavigationView x:Name="NavigationView"
                       PaneDisplayMode="Auto"
                       IsSettingsVisible="False"
                       MenuItemsSource="{Binding ViewModel.NavigationViewItems, Mode=OneWay}"
                       FooterMenuItemsSource="{Binding ViewModel.NavigationViewFooterItems, Mode=OneWay}"
                       SelectedItem="{Binding ViewModel.SelectedNavigationViewItem, UpdateSourceTrigger=PropertyChanged}"
                       ItemInvoked="NavigationView_OnItemInvoked">
        <Grid RowDefinitions="Auto *" x:Name="PageContent"
              Classes.FullWidth="{Binding ViewModel.SelectedPageInfo.UseFullWidth}">
            <Grid.Styles>
                <Style Selector="Grid#PageContent:not(.FullWidth)">
                    <Setter Property="MaxWidth" Value="960"/>
                </Style>
            </Grid.Styles>
            <Grid Grid.Row="0" Margin="12 16 18 0"
                  IsVisible="{Binding !ViewModel.SelectedPageInfo.HidePageTitle}">
                <TextBlock FontWeight="Normal"
                           Text="{Binding ViewModel.SelectedPageInfo.Name}"
                           Theme="{StaticResource TitleTextBlockStyle}"/>
            </Grid>
            <fa:Frame Grid.Row="1" CacheSize="0"
                      Content="{Binding ViewModel.FrameContent}"/>
        </Grid>
    </fa:NavigationView>
</UserControl>
